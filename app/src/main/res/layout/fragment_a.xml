<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="5"
    android:orientation="horizontal"
    tools:context="com.test.ysahn.app2.FragA"
    android:weightSum="1">

    <TextView
        android:textAlignment="textEnd"
        android:id="@+id/view"
        android:text="calc"
        android:textSize="80dp"
        android:layout_height="90dp"
        android:layout_columnSpan="4"
        android:layout_width="match_parent" />
    <Button
        android:text="1"
        android:id="@+id/one"
        android:layout_height="90dp"
        android:layout_width="90dp"/>
    <Button
        android:text="2"
        android:id="@+id/two"
        android:layout_height="90dp"
        android:layout_width="90dp"/>
    <Button
        android:text="3"
        android:id="@+id/three"
        android:layout_height="90dp"
        android:layout_width="90dp"/>
    <Button
        android:text="+"
        android:id="@+id/plus"
        android:layout_height="90dp"
        android:layout_width="90dp"/>
    <Button
        android:text="4"
        android:id="@+id/four"
        android:layout_height="90dp"
        android:layout_width="90dp"/>
    <Button
        android:text="5"
        android:id="@+id/five"
        android:layout_height="90dp"
        android:layout_width="90dp"/>
    <Button
        android:text="6"
        android:id="@+id/six"
        android:layout_height="90dp"
        android:layout_width="90dp"/>
    <Button
        android:text="-"
        android:id="@+id/minus"
        android:layout_height="90dp"
        android:layout_width="90dp"/>
    <Button
        android:text="7"
        android:id="@+id/seven"
        android:layout_height="90dp"
        android:layout_width="90dp"/>
    <Button
        android:text="8"
        android:id="@+id/eight"
        android:layout_height="90dp"
        android:layout_width="90dp"/>
    <Button
        android:text="9"
        android:id="@+id/nine"
        android:layout_height="90dp"
        android:layout_width="90dp"/>
    <Button
        android:text="*"
        android:id="@+id/mult"
        android:layout_height="90dp"
        android:layout_width="90dp"/>
    <Button
        android:text="0"
        android:id="@+id/zero"
        android:layout_height="90dp"
        android:layout_width="90dp"/>
    <Button
        android:text="="
        android:id="@+id/equl"
        android:layout_height="90dp"
        android:layout_width="90dp"/>
    <Button
        android:text="C"
        android:id="@+id/cancel"
        android:layout_height="90dp"
        android:layout_width="90dp"/>
    <Button
        android:text="/"
        android:id="@+id/dvi"
        android:layout_height="90dp"
        android:layout_width="90dp"/>
    <!-- TODO: Update blank fragment layout -->

</GridLayout>
